{
    "appName": "My HTTP Server - Development",
    "config": {
        "listenerPort": 3000,
        "static": {
            "enabled": true,
            "path": "./public"
        },
        "log": {
            "rootLevel": "ERROR",
            "exceptions": [
                {"package": "test.*","logLevel": "INFO"}
            ],
            "format": "json",
            "express": {
                "logReqHeaders": false,
                "logResHeaders": false,
                "generateMsgId": true,
                "logLocals": false,
                "traceIdHeader": "X_TRACE_ID", // This header from the req is passed into res.locals for end to end tracing
                "logType": "roundtrip"
            }
        },
        "enableViewTemplates": true
    }
}